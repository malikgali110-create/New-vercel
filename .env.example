# Filebase S3 Configuration
S3_ENDPOINT=https://s3.filebase.com
S3_REGION=us-east-1
S3_BUCKET=your-nft-collections-bucket
S3_ACCESS_KEY=your-filebase-access-key
S3_SECRET_KEY=your-filebase-secret-key

# XRPL Configuration
XRPL_NET=testnet
# XRPL_NET=mainnet

# XUMM Configuration
XUMM_APIKEY=your-xumm-api-key
XUMM_APISECRET=your-xumm-api-secret

# Upload Configuration
MAX_CHUNK_MB=5
MAX_PARALLEL_UPLOADS=3
RETRY_BACKOFF_MS=1000

# Next.js Public Variables (exposed to frontend)
NEXT_PUBLIC_S3_ENDPOINT=https://s3.filebase.com
NEXT_PUBLIC_S3_BUCKET=your-nft-collections-bucket
NEXT_PUBLIC_S3_ACCESS_KEY=your-filebase-access-key
NEXT_PUBLIC_S3_SECRET_KEY=your-filebase-secret-key
NEXT_PUBLIC_XRPL_NET=testnet

# Security Note:
# Never commit actual keys to version control
# Use different keys for development and production
# Rotate keys regularly for security